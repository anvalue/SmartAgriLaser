<launch>
    <arg name="slave_robot"             default=""/>
  <node pkg="lslidar_m10_driver" type="lslidar_m10_driver_node" name="lslidar_m10_driver_node" output="screen">
    <param name="frame_id" value="$(arg slave_robot)/laser"/>                     #激光坐标
    <param name="device_ip" value="192.168.1.200"/>                 #雷达IP
    <param name="device_port" value="2368"/>                        #雷达端口
    <param name="difop_ip" value="192.168.1.102"/>                  #接收端IP
    <param name="difop_port" value="2369"/>                         #接收端端口
    <!--param name="versions" value="2"/-->                              #协议选择: 1 : 1.1协议  / 2 : 1.3.2协议 / 3 : 1.4.0协议
  </node>

    <node pkg="lslidar_m10_decoder" type="lslidar_m10_decoder_node" name="lslidar_m10_decoder_node" output="screen">
    <param name="child_frame_id" value="$(arg slave_robot)/laser"/>               #激光坐标
    <param name="scan_topic" value="scan"/>                         #设置激光数据topic名称
    <!--param name="versions" value="2"/-->                              #协议选择: 1 : 1.1协议  / 2 : 1.3.2协议 / 3 : 1.4.0协议
  </node>

</launch>
